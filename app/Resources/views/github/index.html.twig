{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>List of GitHub Symfony Directories</h2>            
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Owner</th>
                <th>Url</th>
                <th>Username</th>
              </tr>
            </thead>
            <tbody>
                {% for key, repo in repos %}
                    <tr>
                        <td>{{ repo['name'] }}</td>
                        <td>{{ repo['owner'] }}</td>
                        <td>{{ repo['url'] }}</td>
                        <td>{{ repo['username'] }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

